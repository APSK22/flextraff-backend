[flake8]
# Very lenient flake8 configuration - focus on critical errors only

# Line length - increased to 120 for more flexibility
max-line-length = 120

# Maximum complexity - more lenient
max-complexity = 15

# Ignore ALL whitespace and formatting issues (these are silly errors)
extend-ignore =
    E203,
    E226,
    E227,
    E228,
    W291,
    W293,
    W503,
    W504,
    E501,
    E231,
    E241,
    E251,
    E701,
    E702,
    E703,
    E711,
    E712,
    E713,
    E714,
    E721,
    E722,
    E731,
    F841,
    F401,
    F541,
    C901,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105,
    D106,
    D107,
    D200,
    D201,
    D202,
    D203,
    D204,
    D205,
    D206,
    D207,
    D208,
    D209,
    D210,
    D211,
    D212,
    D213,
    N806,
    N802,
    N803,
    N801

# Exclude common directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    migrations,
    node_modules,
    .eggs,
    *.egg-info,
    .tox

# Show statistics
statistics = True
count = True

# Per-file ignores for even more flexibility in tests
per-file-ignores =
    tests/*:E501,F401,F841,D,W,E